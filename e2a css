/*
 * ファイル名: e2a.css
 * 目的: HTML要素 (h1, h2, p) の基本的な文字サイズを定義
 */

/* H1要素のスタイル */
h1 {
    /* 非常に大きく、ページのメインテーマを示す */
    font-size: 2.5em; 
    /* 補足: 2.5em は、親要素の文字サイズの2.5倍を意味します */
}

/* H2要素のスタイル */
h2 {
    /* セクションのタイトルとしてh1より少し小さいサイズ */
    font-size: 1.8em;
}

/* P要素（段落/本文）のスタイル */
p {
    /* 標準的な本文の読みやすいサイズ */
    font-size: 1em;
}
